<div id="status-line"><span class="mode {{mode}}">{{mode}}</span><span class="file">unsaved</span></div>
<div id="command-window"><input id="command-prompt" type="text" disabled="disabled"/></div>

<div id="mode-menu-container">
	<ul id="mode-menu">
		{{#each options}}
			<li class="menu-item">{{this}}</li>
		{{/each}}
	</ul>
	<p id="menu-prompt-hint"></p>
	<input id="menu-prompt" type="text" onfocus="this.value = this.value;" disabled="disabled"/>
</div>
